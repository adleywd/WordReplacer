@inject IStringLocalizer<NavMenuContentResource> Localizer
@inject AppSettings AppSettings

<MatNavMenu>
    <MatNavItem Href=""><MatIcon Icon="home"></MatIcon>&nbsp; @Localizer["home"] </MatNavItem>
    @*<MatDivider></MatDivider>*@
    @*<MatNavItem Href="about-it"><MatIcon Icon="table_chart"></MatIcon>&nbsp; About it </MatNavItem>*@
</MatNavMenu>
@if (_uiVersion is not null)
{
    <span class="version-drawer-bottom">v@(_uiVersion)</span>
}
@code
{
    string? _uiVersion;

    protected override Task OnInitializedAsync()
    {
        _uiVersion = AppSettings.AppVersion;
        return base.OnInitializedAsync();
    }
}
